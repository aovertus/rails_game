<% unless @matches.empty? %>
	<table class="table">
		<tr>
			<th><%= link_to "Player One", :sort => "player_one_id" %></th>
			<th><%= link_to "Player Two", :sort => "player_two_id" %></th>
			<th><%= link_to "Game", :sort => "game_id" %></th>
			<th>Score</th>
		</tr>
		<% @matches.each do |match| %>
			<tr>
				<td><%= match.player_one.email %></td>
				<td><%= match.player_two.email %></td>
				<td><%= match.game.title %></td>
				<td><%= match.score_one%> - <%= match.score_two%></td>
				
			</td></tr>
		<% end %>
	</table>
<% else %>
	No match found ! 
<% end %>