<%= bootstrap_form_for(@tournament) do |f| %>
  <div class="field">
    <%= f.text_field :name %>
    <%= f.text_field :address %>
    

    <%= f.date_field :start_at %>
    <%= f.date_field :end_at %>
    
    <%= f.number_field :max_player %>
    

    
	Game played : 
    <table class="table">
    <% if @tournament.new_record? %>
	    <%= collection_check_boxes(:tournament_game, :game_id, @games, :id, :title) do |b| %>
	  		<tr><td><%= b.label { b.check_box + b.text} %> </td></tr>
		<% end %>
	<% else %>
		<% @tournament.games.each do |game| %>
			<tr><td><%= game.title %></td></tr>
		<% end %>
	<% end %>	
	</table>

  </div>	
  <div class="actions">
  	<% if @tournament.new_record? %>
  		<%= f.submit "Create", :class => "btn btn-default" %>
  	<% else%>
  	 	<%= f.submit "Update", :class => "btn btn-default" %>
  	<%end%>
  </div>
<% end %>


