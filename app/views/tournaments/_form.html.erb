<%= bootstrap_form_for(@tournament) do |f| %>
  <div class="field">
    <%= f.text_field :name %>
    <%= f.text_field :address %>
    

    <%= f.date_field :start_at %>
    <%= f.date_field :end_at %>
    
    <%= f.number_field :max_player %>
    
    <%= collection_select(:title, :id, @games, :id, :title) %> test
    
  </div>	
  <div class="actions">
  	<% if @tournament.new_record? %>
  		<%= f.submit "Create", :class => "btn btn-default" %>
  	<% else%>
  	 	<%= f.submit "Update", :class => "btn btn-default" %>
  	<%end%>
  </div>
<% end %>


