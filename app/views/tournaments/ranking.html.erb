<h1>Ranking : </h1>
	<% unless @tournaments.empty? %>
		<% @tournaments.each do |tournament| %>
		    <h2><%= tournament.name%></h2>
		    	<table class="table">
		    		<tr>
		    			<th>Email </th>
		    			<th>Score </th>
		    		</tr>
		    		<% tournament.users.each do |user| %>
		    		<tr>
		    			<td><%= user.email %></td>
		    			<td><%= user.score(tournament) %></td>
		    		</tr>
		    		<% end %>
		    	</table>
		    
		<% end %>
	<% else %>
		There is currently no ranking available
	<% end %>
	
	
