<div class="row row-offcanvas row-offcanvas-right">
      <h1>Listing tournaments</h1>
      <table class="table">
            <% @tournaments.each_with_index do |tournament, index| %>
            	<tr>
					<td>
						Name : <%= link_to tournament.name, tournament_path(tournament.id) %> <br/> 
						Address : <%= tournament.address %>
					</td>
					<td><%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{tournament.latitude}%2C#{tournament.longitude}" %></td>
                </tr>  
            <% end %>
       </table>		              
        <br>
    </div>
    <%= link_to "Add tournament", new_tournament_path %>
</div>
