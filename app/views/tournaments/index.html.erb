<div class="row row-offcanvas row-offcanvas-right">
      <h1>Listing tournaments</h1>
      
      <% unless @tournaments.empty? %>
      <table class="table">
            <% @tournaments.each do |tournament| %>
            	<tr>
					<td>
						Name : <%= link_to tournament.name, tournament_path(tournament) %> <br/> 
						Address : <%= tournament.address %> <br/><br/>
						Start : <%= tournament.start_at.to_time.strftime('%e %B %Y') %> <br/>
						End  : <%= tournament.end_at.to_time.strftime('%e %B %Y') %> <br/><br/>
						<% if can? :edit, Tournament %> <%= link_to "Matches Panel", tournament_matches_path(tournament) %> <% end %>
					</td>
					<td><%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{tournament.latitude}%2C#{tournament.longitude}", :class => "google-map" %></td>
                </tr>  
            <% end %>
       </table>		              
        <br>
      <% else %>
      		No tournament found !
      <% end %>
    <p><%if can? :create, Tournament %> <%= link_to "Add tournament", new_tournament_path %> <% end %></p>
</div>
